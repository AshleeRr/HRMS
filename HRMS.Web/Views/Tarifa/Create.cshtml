@model HRMS.Application.DTOs.RoomManagementDto.TarifaDtos.CreateTarifaDto

@{
    ViewData["Title"] = "Create Tarifa";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="bi bi-cash-stack"></i> Create New Tarifa</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="FechaInicio" class="form-label fw-bold"></label>
                            <input asp-for="FechaInicio" type="datetime-local" class="form-control" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaFin" class="form-label fw-bold"></label>
                            <input asp-for="FechaFin" type="datetime-local" class="form-control" />
                            <span asp-validation-for="FechaFin" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrecioPorNoche" class="form-label fw-bold"></label>
                            <input asp-for="PrecioPorNoche" type="number" step="0.01" class="form-control" placeholder="Enter price per night" />
                            <span asp-validation-for="PrecioPorNoche" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descuento" class="form-label fw-bold"></label>
                            <input asp-for="Descuento" type="number" step="0.01" class="form-control" placeholder="Enter discount percentage" />
                            <span asp-validation-for="Descuento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <input asp-for="Descripcion" class="form-control" placeholder="Enter description" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdCategoria" class="form-label fw-bold"></label>
                            <input asp-for="IdCategoria" type="number" class="form-control" placeholder="Enter category ID" />
                            <span asp-validation-for="IdCategoria" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Create Tarifa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Format datetime fields from model data to the HTML datetime-local format
        $(document).ready(function() {
            // If there are initial dates, make sure they're formatted correctly
            const formatDateTimeForInput = function(dateField) {
                if ($(dateField).val()) {
                    // Parse the current date
                    const date = new Date($(dateField).val());
                    if (!isNaN(date.getTime())) {
                        // Format date to YYYY-MM-DDThh:mm
                        const formattedDate = date.toISOString().slice(0, 16);
                        $(dateField).val(formattedDate);
                    }
                }
            };

            formatDateTimeForInput("input[name='FechaInicio']");
            formatDateTimeForInput("input[name='FechaFin']");
        });
    </script>
}