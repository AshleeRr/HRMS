@model HRMS.Application.DTOs.RoomManagementDto.PisoDtos.CreatePisoDto

@{
    ViewData["Title"] = "Create Floor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="bi bi-plus-lg"></i> Create New Floor</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <input asp-for="Descripcion" class="form-control" placeholder="Enter floor description" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Create Floor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
