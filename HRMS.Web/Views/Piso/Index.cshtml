@model IEnumerable<HRMS.Application.DTOs.RoomManagementDto.PisoDtos.PisoDto>

@{
    ViewData["Title"] = "Floors";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary"><i class="bi bi-building"></i> Floor List</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdPiso" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdPiso" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this floor?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>