@model WebApi.Models.RoomModels.EstadoHabitacionModel

@{
    ViewData["Title"] = "Crear Estado de Habitación";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow mb-4">
        <div class="card-header bg-success text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo Estado de Habitación
                </h5>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Volver al Listado
                </a>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" id="createForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                                <input asp-for="Descripcion" class="form-control" placeholder="Ej. Disponible" required />
                            </div>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Campos ocultos -->
                <input type="hidden" asp-for="ChangeTime" value="@DateTime.Now" />
                <input type="hidden" asp-for="UserID" value="1" /> <!-- Esto se debe cambiar por el ID del usuario actual -->

                <div class="form-group mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar Estado
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}