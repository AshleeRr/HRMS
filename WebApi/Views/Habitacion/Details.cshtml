@model WebApi.Models.RoomModels.HabitacionModel

@{
    ViewData["Title"] = "Detalles de Habitación";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle"></i> Detalles de la Habitación #@Model.numero
                </h5>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.idHabitacion" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="bi bi-building"></i> Información Básica</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Número</dt>
                                <dd class="col-sm-8 fw-bold text-primary">@Model.numero</dd>

                                <dt class="col-sm-4">Detalle</dt>
                                <dd class="col-sm-8">
                                    @if (string.IsNullOrEmpty(Model.detalle))
                                    {
                                        <span class="text-muted fst-italic">Sin descripción</span>
                                    }
                                    else
                                    {
                                        @Model.detalle
                                    }
                                </dd>

                                <dt class="col-sm-4">Precio</dt>
                                <dd class="col-sm-8 text-success fw-bold">$@Model.precio</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="bi bi-tags"></i> Clasificación</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Estado</dt>
                                <dd class="col-sm-8">
                                    @{
                                        string estadoClass = "secondary";
                                        string estadoTexto = "No definido";

                                        switch (Model.idEstadoHabitacion)
                                        {
                                            case 1:
                                                estadoClass = "success";
                                                estadoTexto = "Disponible";
                                                break;
                                            case 2:
                                                estadoClass = "danger";
                                                estadoTexto = "Ocupada";
                                                break;
                                            case 3:
                                                estadoClass = "warning";
                                                estadoTexto = "En Mantenimiento";
                                                break;
                                            case 4:
                                                estadoClass = "info";
                                                estadoTexto = "Reservada";
                                                break;
                                        }
                                    }
                                    <span class="badge bg-@estadoClass">@estadoTexto</span>
                                </dd>

                                <dt class="col-sm-4">Piso</dt>
                                <dd class="col-sm-8">@Model.idPiso</dd>

                                <dt class="col-sm-4">Categoría</dt>
                                <dd class="col-sm-8">@Model.idCategoria</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-0">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><i class="bi bi-clock-history"></i> Información de Auditoria</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">ID</dt>
                                <dd class="col-sm-8 text-muted">@Model.idHabitacion</dd>

                                <dt class="col-sm-4">Usuario</dt>
                                <dd class="col-sm-8">@Model.UserID</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Actualización</dt>
                                <dd class="col-sm-8">@Model.ChangeTime.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <a asp-action="Delete" asp-route-id="@Model.idHabitacion" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
            </div>
        </div>
    </div>
</div>