@model WebApi.Models.RoomModels.PisoModel

@{
    ViewData["Title"] = "Detalles del Piso";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle"></i> Detalles del Piso: @Model.Descripcion
                </h5>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.IdPiso" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="bi bi-info-circle"></i> Información Básica</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">ID</dt>
                                <dd class="col-sm-8 text-primary">@Model.IdPiso</dd>

                                <dt class="col-sm-4">Descripción</dt>
                                <dd class="col-sm-8 fw-bold">@Model.Descripcion</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="bi bi-clock-history"></i> Información de Auditoria</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Usuario</dt>
                                <dd class="col-sm-8">@Model.UserID</dd>

                                <dt class="col-sm-4">Actualización</dt>
                                <dd class="col-sm-8">@Model.ChangeTime.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Aquí se podrían mostrar las habitaciones asociadas a este piso -->
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <a asp-action="Delete" asp-route-id="@Model.IdPiso" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
            </div>
        </div>
    </div>
</div>